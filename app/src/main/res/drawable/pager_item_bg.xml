<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="@dimen/margin" android:left="@dimen/margin" android:right="@dimen/margin"
          android:bottom="@dimen/margin">
        <shape>
            <solid android:color="@color/pager_item_bg"/>
            <corners android:radius="8dp"/>
            <stroke
                    android:width="@dimen/stroke"
                    android:color="@color/pager_item_stroke"/>
            <gradient
                    android:angle="0"
                    android:startColor="@color/pager_item_gradient_start"
                    android:centerColor="@color/pager_item_gradient_center"
                    android:endColor="@color/pager_item_gradient_end"
                    android:type="linear"/>
        </shape>
    </item>
</layer-list>