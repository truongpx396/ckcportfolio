<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/pager_item_bg"/>
            <corners android:radius="8dp"/>
            <stroke
                    android:width="1dp"
                    android:color="@color/pager_item_stroke"/>
        </shape>
    </item>
    <item
            android:bottom="@dimen/margin_small"
            android:left="@dimen/margin_small"
            android:right="@dimen/margin_small"
            android:top="@dimen/margin_small">
        <shape android:shape="rectangle">
            <solid android:color="@color/pager_item_gradient_start"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

</layer-list>