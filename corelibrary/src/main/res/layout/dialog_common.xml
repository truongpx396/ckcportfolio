<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_title"
                style="@style/DialogHeaderStyle"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_gravity="center_horizontal"
                android:background="@color/dialog_success_header"
                android:drawableLeft="@drawable/ic_dialog_help"
                android:text="Confirmation"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                style="@style/DialogContentStyle"
                android:id="@+id/tv_message"
                android:layout_gravity="center_horizontal"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@drawable/bottomtabbar_bg">

            <Button
                    android:visibility="gone"
                    android:layout_width="@dimen/widthzero"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:text="@android:string/cancel"
                    style="@style/DialogButtonStyle"
                    android:id="@+id/btn_cancel"/>

            <Button
                    android:layout_width="@dimen/widthzero"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:text="@android:string/ok"
                    style="@style/DialogButtonStyle"
                    android:id="@+id/btn_ok"/>
        </LinearLayout>
    </LinearLayout>

</layout>